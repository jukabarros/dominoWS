<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">


<!-- Login -->
<navigation-rule>
	<from-view-id>index.xhtml</from-view-id>
     <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/game/game.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

<!-- Logout -->
<navigation-rule>
	<from-view-id>*</from-view-id>
     <navigation-case>
      <from-outcome>logout</from-outcome>
      <to-view-id>index.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

<!-- newPlayer -->
<navigation-rule>
	<from-view-id>index.xhtml</from-view-id>
     <navigation-case>
      <from-outcome>newPlayer</from-outcome>
      <to-view-id>newPlayer.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

<!-- Index -->
<navigation-rule>
	<from-view-id>newPlayer.xhtml</from-view-id>
     <navigation-case>
      <from-outcome>index</from-outcome>
      <to-view-id>index.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

<!-- newGame -->
<navigation-rule>
	<from-view-id>game.xhtml</from-view-id>
     <navigation-case>
      <from-outcome>newGame</from-outcome>
      <to-view-id>newGame.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

<!-- Games -->
<navigation-rule>
	<from-view-id>newGame.xhtml</from-view-id>
     <navigation-case>
      <from-outcome>game</from-outcome>
      <to-view-id>game.xhtml</to-view-id>
      <redirect />
	</navigation-case>

</navigation-rule>

</faces-config>
